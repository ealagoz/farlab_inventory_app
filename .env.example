# FarLab Inventory Management System - Environment Configuration
# Copy this file to .env and customize the values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="FARLAB Inventory Management System"
DEBUG=false
API_PREFIX="/api"
FRONTEND_URL="http://localhost"

# =============================================================================
# Database Configuration  
# =============================================================================
DB_HOST=db
DB_PORT=5432
DB_INTERNAL_PORT=5432
DB_USER=farlab_user
DB_NAME=farlab_inventory

# =============================================================================
# JWT Authentication
# =============================================================================
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Email Notification Settings
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# SMTP credentials are stored in secrets/secrets.txt

# =============================================================================
# Admin User Configuration
# =============================================================================
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
ADMIN_USERNAME=admin
# Admin credentials are stored in secrets/secrets.txt

# =============================================================================
# Scheduler Configuration
# =============================================================================
SCHEDULER_INTERVAL_MINUTES=60

# =============================================================================
# Development Settings
# =============================================================================
# Uncomment for development
# DEBUG=true
# SCHEDULER_INTERVAL_MINUTES=5